<Window x:Class="FinalTest.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:chart="clr-namespace:CANtoUSB_UserControlLib.Utills.Chart;assembly=CANtoUSB_UserControlLib"
        Title="CAN Data Viewer" Height="800" Width="1200">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Connection Controls -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <ComboBox ItemsSource="{Binding AvailablePorts}"
                      SelectedItem="{Binding SelectedPort}"
                      Width="120" Margin="0,0,10,0"/>
            <Button Command="{Binding ConnectCommand}"
                    Content="{Binding IsConnected, FallbackValue=Connect}"
                    Width="100" Margin="0,0,10,0"/>
            <TextBlock Text="{Binding ConnectionStatus}" 
                      VerticalAlignment="Center" FontSize="14"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column -->
            <Grid Grid.Column="0" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Engine Temperature Gauges -->
                <GroupBox Header="Engine Temperature" Grid.Row="0" Margin="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <chart:mini_type1_gp x:Name="Engine1TempGauge" 
                                           Grid.Column="0" Height="200" Margin="5"/>
                        <chart:mini_type1_gp x:Name="Engine2TempGauge" 
                                           Grid.Column="1" Height="200" Margin="5"/>
                    </Grid>
                </GroupBox>

                <!-- Fuel Quantity Gauges -->
                <GroupBox Header="Fuel Quantity" Grid.Row="1" Margin="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <chart:mini_type1_bp x:Name="FuelLeftGauge" 
                                           Grid.Column="0" Height="200" Margin="5"/>
                        <chart:mini_type1_bp x:Name="FuelRightGauge" 
                                           Grid.Column="1" Height="200" Margin="5"/>
                    </Grid>
                </GroupBox>

                <!-- Flight Status Info -->
                <GroupBox Header="Flight Status" Grid.Row="2" Margin="5">
                    <StackPanel>
                        <TextBlock Text="{Binding FlightData.FlightMode, StringFormat='Flight Mode: {0}'}"
                                 Margin="5" FontSize="16"/>
                        <TextBlock Text="{Binding FlightData.AutopilotEngaged, StringFormat='Autopilot: {0}'}"
                                 Margin="5" FontSize="16"/>
                        <TextBlock Text="{Binding FlightData.LandingGearStatus, StringFormat='Landing Gear: {0}'}"
                                 Margin="5" FontSize="16"/>
                        <TextBlock Text="{Binding FlightData.FlapsPosition, StringFormat='Flaps: {0}°'}"
                                 Margin="5" FontSize="16"/>
                        <TextBlock Text="{Binding FlightData.Altitude, StringFormat='Altitude: {0:F0} ft'}"
                                 Margin="5" FontSize="16"/>
                        <TextBlock Text="{Binding FlightData.VerticalSpeed, StringFormat='Vertical Speed: {0:F0} ft/min'}"
                                 Margin="5" FontSize="16"/>
                    </StackPanel>
                </GroupBox>
            </Grid>

            <!-- Right Column -->
            <Grid Grid.Column="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Engine Info -->
                <GroupBox Header="Engine Data" Grid.Row="0" Margin="5">
                    <StackPanel>
                        <TextBlock Text="{Binding EngineData.Engine1Thrust, StringFormat='Engine 1 Thrust: {0:F1} kN'}"
                                 Margin="5" FontSize="16"/>
                        <TextBlock Text="{Binding EngineData.Engine2Thrust, StringFormat='Engine 2 Thrust: {0:F1} kN'}"
                                 Margin="5" FontSize="16"/>
                        <TextBlock Text="{Binding EngineData.Engine1Status, StringFormat='Engine 1 Status: {0}'}"
                                 Margin="5" FontSize="16"/>
                        <TextBlock Text="{Binding EngineData.Engine2Status, StringFormat='Engine 2 Status: {0}'}"
                                 Margin="5" FontSize="16"/>
                    </StackPanel>
                </GroupBox>

                <!-- Navigation Info -->
                <GroupBox Header="Navigation" Grid.Row="1" Margin="5">
                    <StackPanel>
                        <TextBlock Text="{Binding NavigationData.Latitude, StringFormat='Latitude: {0:F6}°'}"
                                 Margin="5" FontSize="16"/>
                        <TextBlock Text="{Binding NavigationData.Longitude, StringFormat='Longitude: {0:F6}°'}"
                                 Margin="5" FontSize="16"/>
                    </StackPanel>
                </GroupBox>

                <!-- Environment Info -->
                <GroupBox Header="Environment" Grid.Row="2" Margin="5">
                    <StackPanel>
                        <TextBlock Text="{Binding EnvironmentData.OutsideAirTemp, StringFormat='Outside Air Temperature: {0:F1}°C'}"
                                 Margin="5" FontSize="16"/>
                        <TextBlock Text="{Binding EnvironmentData.AirPressure, StringFormat='Air Pressure: {0:F1} kPa'}"
                                 Margin="5" FontSize="16"/>
                        <TextBlock Text="{Binding EnvironmentData.WindSpeed, StringFormat='Wind Speed: {0:F1} kt'}"
                                 Margin="5" FontSize="16"/>
                        <TextBlock Text="{Binding EnvironmentData.WindDirection, StringFormat='Wind Direction: {0:F0}°'}"
                                 Margin="5" FontSize="16"/>
                        <TextBlock Text="{Binding EnvironmentData.TurbulenceLevel, StringFormat='Turbulence Level: {0}'}"
                                 Margin="5" FontSize="16"/>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</Window>