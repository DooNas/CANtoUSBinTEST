<Window x:Class="FinalTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:chart="clr-namespace:CANtoUSB_UserControlLib.Utills.Chart;assembly=CANtoUSB_UserControlLib"
        Title="CAN Data Viewer" Height="800" Width="1200">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Connection Controls -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <ComboBox x:Name="PortComboBox" Width="120" Margin="0,0,10,0"/>
            <Button Content="Connect" Click="ConnectButton_Click" Width="100" Margin="0,0,10,0"/>
            <TextBlock x:Name="StatusText" VerticalAlignment="Center" FontSize="14"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column -->
            <Grid Grid.Column="0" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Engine Temperature Gauges -->
                <GroupBox Header="Engine Temperature" Grid.Row="0" Margin="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <chart:mini_type1_gp x:Name="Engine1TempGauge" Grid.Column="0" Height="200" Margin="5"/>
                        <chart:mini_type1_gp x:Name="Engine2TempGauge" Grid.Column="1" Height="200" Margin="5"/>
                    </Grid>
                </GroupBox>

                <!-- Fuel Quantity Gauges -->
                <GroupBox Header="Fuel Quantity" Grid.Row="1" Margin="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <chart:mini_type1_bp x:Name="FuelLeftGauge" Grid.Column="0" Height="200" Margin="5"/>
                        <chart:mini_type1_bp x:Name="FuelRightGauge" Grid.Column="1" Height="200" Margin="5"/>
                    </Grid>
                </GroupBox>

                <!-- Flight Status Info -->
                <GroupBox Header="Flight Status" Grid.Row="2" Margin="5">
                    <StackPanel>
                        <TextBlock x:Name="FlightModeText" Margin="5" FontSize="16"/>
                        <TextBlock x:Name="AutopilotText" Margin="5" FontSize="16"/>
                        <TextBlock x:Name="LandingGearText" Margin="5" FontSize="16"/>
                        <TextBlock x:Name="FlapsText" Margin="5" FontSize="16"/>
                        <TextBlock x:Name="AltitudeText" Margin="5" FontSize="16"/>
                        <TextBlock x:Name="VerticalSpeedText" Margin="5" FontSize="16"/>
                    </StackPanel>
                </GroupBox>
            </Grid>

            <!-- Right Column -->
            <Grid Grid.Column="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Engine Info -->
                <GroupBox Header="Engine Data" Grid.Row="0" Margin="5">
                    <StackPanel>
                        <TextBlock x:Name="Engine1ThrustText" Margin="5" FontSize="16"/>
                        <TextBlock x:Name="Engine2ThrustText" Margin="5" FontSize="16"/>
                        <TextBlock x:Name="Engine1StatusText" Margin="5" FontSize="16"/>
                        <TextBlock x:Name="Engine2StatusText" Margin="5" FontSize="16"/>
                    </StackPanel>
                </GroupBox>

                <!-- Navigation Info -->
                <GroupBox Header="Navigation" Grid.Row="1" Margin="5">
                    <StackPanel>
                        <TextBlock x:Name="LatitudeText" Margin="5" FontSize="16"/>
                        <TextBlock x:Name="LongitudeText" Margin="5" FontSize="16"/>
                    </StackPanel>
                </GroupBox>

                <!-- Environment Info -->
                <GroupBox Header="Environment" Grid.Row="2" Margin="5">
                    <StackPanel>
                        <TextBlock x:Name="OutsideAirTempText" Margin="5" FontSize="16"/>
                        <TextBlock x:Name="AirPressureText" Margin="5" FontSize="16"/>
                        <TextBlock x:Name="WindSpeedText" Margin="5" FontSize="16"/>
                        <TextBlock x:Name="WindDirectionText" Margin="5" FontSize="16"/>
                        <TextBlock x:Name="TurbulenceLevelText" Margin="5" FontSize="16"/>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</Window>